extends: default

rules:
  indentation:
    spaces: 2
    indent-sequences: consistent
  line-length:
    max: 180
    allow-non-breakable-words: true
    allow-non-breakable-inline-mappings: true
  trailing-spaces: enable
  empty-lines:
    max: 2
    max-start: 0
    max-end: 1
  truthy:
    allowed-values: [ "true", "false", "on", "off" ]
  comments:
    min-spaces-from-content: 1
  # ansible-lint requires comments-indentation to be false for auto-fix compatibility
  comments-indentation: false
  document-start: disable
  key-duplicates: enable
  # ansible-lint requires braces.max-spaces-inside: 1 for consistent formatting
  braces:
    min-spaces-inside: 0
    max-spaces-inside: 1
  brackets: disable
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true

ignore: |
  **/.git/**
  **/.github/**
  **/.gitea/**
  **/.terraform/**
  **/charts/**
  **/Chart.lock
  docs/archive/**
  **/*.template.yaml
  **/templates/*.yaml
  **/*.tpl
  **/templates/**
  **/_helpers.tpl
  **/crds/**
