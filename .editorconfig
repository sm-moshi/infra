# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Terraform files
[*.{tf,tfvars}]
indent_style = space
indent_size = 2

# Helm templates
[{templates/**/*.yaml,templates/**/*.yml,templates/**/*.tpl}]
indent_style = space
indent_size = 2

# Markdown files (preserve trailing whitespace for line breaks)
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2 (fine)

# Python (Ansible)
[*.py]
indent_style = space
indent_size = 4

# Makefiles require tabs
[Makefile]
indent_style = tab

# Go files
[*.go]
indent_style = tab
