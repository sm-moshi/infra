{
  "[ansible]": {
    "editor.defaultFormatter": "kennylong.kubernetes-yaml-formatter"
  },
  "[fish]": {
    "editor.defaultFormatter": "bmalehorn.vscode-fish"
  },
  "[helm]": {
    "editor.formatOnSave": false,
    "editor.wordWrap": "wordWrapColumn",
    "prettier.bracketSpacing": false,
    "prettier.experimentalTernaries": true,
    "prettier.printWidth": 120,
    "prettier.useTabs": false
  },
  "[ignore]": {
    "editor.defaultFormatter": "lkrms.inifmt"
  },
  "[markdown]": {
    "editor.defaultFormatter": "rvben.rumdl"
  },
  "[plaintext]": {
    "editor.defaultFormatter": "lkrms.inifmt"
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "ansible.ansible.path": "${workspace}/.venv/bin/ansible",
  "ansible.ansible.reuseTerminal": true,
  "ansible.executionEnvironment.containerEngine": "docker",
  "ansible.executionEnvironment.enabled": true,
  "ansible.executionEnvironment.pull.policy": "missing",
  "ansible.lightspeed.enabled": false,
  "ansible.lightspeed.suggestions.enabled": false,
  "ansible.mcpServer.enabled": true,
  "ansible.playbook.arguments": "--diff",
  "ansible.python.activationScript": "${workspace}/.venv/bin/activate",
  "ansible.python.interpreterPath": "${workspace}/.venv/bin/python",
  "ansible.validation.enabled": true,
  "ansible.validation.lint.path": "${workspace}/.venv/bin/ansible-lint",
  "chat.agent.maxRequests": 50,
  "chat.agent.thinking.collapsedTools": "withThinking",
  "chat.checkpoints.showFileChanges": true,
  "chat.customAgentInSubagent.enabled": true,
  "chat.editor.wordWrap": "on",
  "chat.instructionsFilesLocations": {
    ".github/agents/": true,
    "AGENTS.md": true,
    "docs/warp.md": true
  },
  "chat.mcp.assisted.nuget.enabled": true,
  "chat.mcp.discovery.enabled": {
    "claude-desktop": true,
    "cursor-global": true,
    "cursor-workspace": true,
    "windsurf": true
  },
  "chat.mcp.gallery.enabled": true,
  "chat.mcp.serverSampling": {
    "infra/.vscode/mcp.json: MCP_DOCKER": {
      "allowedModels": [
        "copilot/auto",
        "copilot/claude-haiku-4.5",
        "copilot/claude-opus-4.5",
        "copilot/claude-sonnet-4.5",
        "copilot/gemini-2.5-pro",
        "copilot/gemini-3-flash-preview",
        "copilot/gemini-3-pro-preview",
        "copilot/gpt-5",
        "copilot/gpt-5-codex",
        "copilot/gpt-5.1",
        "copilot/gpt-5.1-codex",
        "copilot/gpt-5.1-codex-max",
        "copilot/gpt-5.1-codex-mini",
        "copilot/gpt-5.2",
        "copilot/gpt-5.2-codex",
        "copilot/grok-code-fast-1",
        "copilot/oswe-vscode-prime",
        "copilot/claude-sonnet-4"
      ]
    }
  },
  "chat.renderRelatedFiles": true,
  "chat.tools.terminal.autoApprove": {
    "awk": true,
    "docker manifest": true,
    "git add": true,
    "helm": true,
    "kubectl api-resources": true,
    "kubectl describe": true,
    "kubectl get": true,
    "kubectl logs": true,
    "kubectl top": true,
    "mise": true,
    "tools/ci/k8s-lint.sh": true
  },
  "chat.useAgentSkills": true,
  "chat.useNestedAgentsMdFiles": true,
  "debug.javascript.defaultRuntimeExecutable": {
    "pwa-node": "${workspaceFolder}/.vscode/mise-tools/node"
  },
  "editor.aiStats.enabled": true,
  "editor.autoIndentOnPaste": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.wordWrap": "bounded",
  "files.associations": {
    "**/templates/**/*.yaml": "helm"
  },
  "go.alternateTools": {
    "go": "${workspaceFolder}/.vscode/mise-tools/go"
  },
  "go.goroot": "${workspaceFolder}/.vscode/mise-tools/goRoot",
  "go.toolsManagement.autoUpdate": true,
  "helm-ls.yamlls.path": "/opt/homebrew/bin/yaml-language-server",
  "kubeseal.useLocalCertificate": false,
  "problems.defaultViewMode": "table",
  "problems.showCurrentInStatus": true,
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv",
  "shellcheck.executablePath": "${workspaceFolder}/.vscode/mise-tools/shellcheck",
  "snyk.advanced.autoSelectOrganization": true,
  "snyk.advanced.cliReleaseChannel": "preview",
  "snyk.advanced.organization": "d956920a-26b8-4e3b-a9d2-8964e5b0d2db",
  "snyk.issueViewOptions": {
    "ignoredIssues": true
  },
  "snyk.securityAtInception.autoConfigureSnykMcpServer": true,
  "snyk.securityAtInception.executionFrequency": "Smart Scan",
  "sonarlint.connectedMode.project": {
    "connectionId": "m0sh1",
    "projectKey": "sm-moshi_infra"
  },
  "terminal.explorerKind": "integrated",
  "terminal.integrated.allowMnemonics": false,
  "terminal.integrated.confirmOnExit": "hasChildProcesses",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.defaultProfile.osx": "fish",
  "terminal.integrated.enableMultiLinePasteWarning": "always",
  "terminal.integrated.enableVisualBell": true,
  "terminal.integrated.fontLigatures.enabled": true,
  "terminal.integrated.shellIntegration.environmentReporting": true,
  "terminal.integrated.shellIntegration.history": 250,
  "terminal.integrated.smoothScrolling": true,
  "workbench.commandPalette.experimental.suggestCommands": true,
  "workbench.commandPalette.preserveInput": true,
  "workbench.experimental.cloudChanges.partialMatches.enabled": false,
  "workbench.productIconTheme": "fluent-icons",
  "yaml.schemas": {
    "file:///Users/smeya/.vscode/extensions/atlassian.atlascode-4.1.65/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml",
    "https://raw.githubusercontent.com/ansible/ansible-lint/main/src/ansiblelint/schemas/ansible.json": "file:///Users/smeya/git/m0sh1.cc/infra/ansible/roles/proxmox_template_debian13/tasks/template.yaml",
    "https://raw.githubusercontent.com/bitnami-labs/sealed-secrets/main/schema/SealedSecret.json": "**/*.sealedsecret.yaml"
  },
  "yaml.validate": false
}
