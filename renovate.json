{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":preserveSemverRanges",
        "group:allNonMajor",
        "helpers:pinGitHubActionDigests"
    ],
    "platformAutomerge": false,
    "dependencyDashboard": true,
    "dependencyDashboardAutoclose": true,
    "timezone": "Europe/Berlin",
    "schedule": [
        "at any time"
    ],
    "prHourlyLimit": 12,
    "prConcurrentLimit": 5,
    "rangeStrategy": "bump",
    "enabledManagers": [
        "terraform",
        "helmv3",
        "helm-values",
        "dockerfile",
        "github-actions",
        "ansible",
        "ansible-galaxy",
        "cargo",
        "kustomize",
        "mise"
    ],
    "labels": [
        "dependencies"
    ],
    "ignorePaths": [
        "docs/archive/**",
        "tools/patching/base/**",
        "tools/patching/images/**"
    ],
    "lockFileMaintenance": {
        "enabled": true,
        "schedule": [
            "* 0 * * *"
        ]
    },
    "packageRules": [
        {
            "matchManagers": [
                "terraform"
            ],
            "groupName": "Terraform modules",
            "groupSlug": "terraform-modules",
            "separateMinorPatch": true,
            "labels": [
                "dependencies",
                "terraform"
            ]
        },
        {
            "matchManagers": [
                "helmv3",
                "helm-values"
            ],
            "groupName": "Helm charts",
            "groupSlug": "helm-charts",
            "separateMinorPatch": true,
            "labels": [
                "dependencies",
                "helm"
            ]
        },
        {
            "matchManagers": [
                "dockerfile"
            ],
            "groupName": "Docker images",
            "groupSlug": "docker-images",
            "separateMinorPatch": true,
            "labels": [
                "dependencies",
                "docker"
            ]
        },
        {
            "matchManagers": [
                "github-actions"
            ],
            "groupName": "GitHub Actions",
            "groupSlug": "github-actions",
            "separateMinorPatch": true,
            "labels": [
                "dependencies",
                "ci"
            ]
        },
        {
            "matchManagers": [
                "cargo"
            ],
            "groupName": "Rust dependencies",
            "groupSlug": "rust-dependencies",
            "separateMinorPatch": true,
            "labels": [
                "dependencies",
                "rust"
            ]
        }
    ]
}